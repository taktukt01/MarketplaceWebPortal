@model MarketplaceWebPortal.Core.POCOClasses.UserUI

@{
    ViewBag.Title = "Login";
    Layout = null;
}



<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <style>
        body {
            background: linear-gradient(to bottom, #2e75b2 27%, #ffffff 100%);
            text-align: center;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }
        #btn {
            background-color: #2E75B2;
            color:#ffffff
        }
        #logo img{
            justify-content: center;
            align-items: center;
            padding-top:150px;
        }
        label {
            font-weight:600;
            font-size:x-large;
        }
        #BodyDetail {
            height: 300px;
            width: 400px;
            margin: 100px auto;
            background-color: #FF6600;
            color: #FFFFFF;
            padding: 10px;
        }
        input {
            width:500px;
        }
        button {
            margin-left: 400px;
            width: 100px
        }
        .signup {
            background-color: Transparent;
            background-repeat: no-repeat;
            font-weight:500;
            border: none;
            cursor: pointer;
            overflow: hidden;
            outline: none;
            margin-left:700px
        }
    </style>
    
</head>
<body>

    <div class="container">
        <div>
            <form action="/User/Index">
                <button class="signup">Sign Up</button>

            </form>
        </div>
        <div id="logo">
            <img src="~/Img/Joole.png" />
        </div>
        <br />
        <label class="mb-3"> Building Product Selection Platform</label>

        <div id="#BodyDetail">
            <form action="/Login/verify" method="post">

                <div class="mb-3">
                    <input type="text" placeholder="Username" name="UserName">
                </div>

                <div class="mb-3">
                    <input type="password" placeholder="Password" name="Password">
                </div>
                <div>
                    <button type="submit" id="btn">Log In</button>
                </div>
            </form>
        </div>
    </div>
</body>